<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.translators.proffDev.presentation.search.SearchFragment"
        android:label="Переводчик"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_searchFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.translators.proffDev.presentation.detail.DetailFragment"
        android:label="{label}"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="dataModel"
            app:argType="com.example.translators.proffDev.domain.model.search.DataModel" />
        <argument
            android:name="label"
            android:defaultValue="Перевод"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.translators.proffDev.presentation.history.HistoryFragment"
        android:label="История"
        tools:layout="@layout/fragment_history" />
</navigation>

